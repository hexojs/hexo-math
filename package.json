{
  "name": "hexo-math",
  "version": "4.0.0",
  "description": "Add math support to hexo",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/akfish/hexo-math.git"
  },
  "scripts": {
    "clean": "run-p clean:*",
    "clean:build": "rimraf lib",
    "clean:test": "rimraf test/site",
    "build": "babel src --out-dir lib",
    "pretest:clone": "git clone --recursive https://github.com/hexojs/hexo-starter.git ./test/site",
    "pretest:asset": "cpx \"test/asset/**/*\" test/site",
    "pretest:bootstrap": "npm --prefix=test/site install",
    "pretest": "run-s clean:test pretest:clone pretest:asset pretest:bootstrap",
    "test": "mocha",
    "lint": "run-p lint:*",
    "lint:src": "eslint src/*.js",
    "lint:test": "eslint test/*.js"
  },
  "keywords": [
    "website",
    "blog",
    "cms",
    "framework",
    "hexo",
    "mathjax"
  ],
  "author": "AKFish <akfish@gmail.com> (http://catx.me)",
  "license": "MIT",
  "dependencies": {
    "html-entities": "^1.1.3",
    "katex": "^0.6.0",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cpx": "^1.5.0",
    "eslint": "^5.12.1",
    "eslint-config-hexo": "^3.0.0",
    "hexo": "hexojs/hexo",
    "hexo-fs": "^1.0.2",
    "hexo-util": "^0.6.0",
    "mocha": "^6.1.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3"
  },
  "engines": {
    "node": "^8.9 || ^10.13 || >=12"
  }
}
